<% if flash[:notice] %>
  <p class="notice text-success"><%= flash[:notice] %></p>
<% end %>

<div class="container px-5 px-sm-0 mt-3">
  <div class="row">
    
    <%= render 'books/list',book: @book, user: @user %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th class="Title">Title</th>
            <th class="Opinion">Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @user.books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
               <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "40x40" %>
              <% end %>
            </td>
            <td class="Title"><%= link_to "#{book.title}", book_path(book.id) %></td>
            <td class="Opinion"><%= book.body %></td>
            <td>コメント数：<%= book.book_comments.count %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
  </div>
  
</div>