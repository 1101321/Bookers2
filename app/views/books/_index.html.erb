

<table class="table table-hover table-inverse">
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td style="width: 40px">
          <%= link_to user_path(book.user.id) do %>
            <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "40x40" %>
          <% end %>
        </td>
        <td class="Title", style="width: 40%"><%= link_to "#{book.title}", book_path(book.id) %></td>
        <td class="Opinion"><%= book.body %></td>

        <td id="favorite_buttons">
          <%= render "favorites/favorites", book: book %>
        </td>

        <td>コメント数：<%= book.book_comments.count %></td>

      </tr>
    <% end %>
    </tbody>
      </table>