<div class="container px-5 px-sm-0">
  <div class="row">
    
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: "63x63" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>
      
      <div class="row">
        <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      
 
      <h2 class="mt-3">New book</h2>
      
      <%= form_with model:@book, local: true do |f| %>

      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class: "form-control book_title" %>
      </div>
      
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, class: "form-control book_title" %>
      </div>
      
      <div class="form-group">
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      </div>
      
      <% end %>
      
    </div>
    
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
           <tr>
            <td style="width: 40px">
              <%= link_to user_path(current_user.id) do %>
               <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "40x40"%>
              <% end %>
            </td>
            <td class="Title", style="width: 30%"><%= link_to "#{book.title}", book_path(book.id) %></td>
            <td class="Opinion"><%= book.body %></td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
  </div>
  
</div>