<div class="container px-5 px-sm-0">
  <div class="row">
    
    <%= render 'books/list',books: @book %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
           <tr>
            <td style="width: 40px">
              <%= link_to user_path(current_user.id) do %>
               <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "40x40" %>
              <% end %>
            </td>
            <td class="Title", style="width: 40%"><%= link_to "#{book.title}", book_path(book.id) %></td>
            <td class="Opinion"><%= book.body %></td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
  </div>
  
</div>