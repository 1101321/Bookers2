        <% @book.book_comments.each do |book_comment| %>
          <%= link_to user_path(book_comment.user.id) do %>
            <p><%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", size: "40x40"%></p>
            <%= book_comment.user.name %>
          <% end %>

          <%= book_comment.comment %>

          <% if book_comment.user.id == current_user.id %>
            <%= link_to "Destroy", book_book_comments_path(book_comment), class: "btn btn-sm btn-danger", method: :delete, remote: true %>
          <% end %>

        <% end %>