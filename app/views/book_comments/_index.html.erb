<tbody>
  <% book.book_comments.each do |book_comment| %>
    <% book_comment_user = book_comment.user %>
    <tr>
      <td>
        <%= link_to user_path(book_comment.user), remote: true do %>
          <%= attachment_image_tag book_comment_user, :profile_image, fallback: "no_image.jpg", size: "40x40"%></br>
          <%= book_comment_user.name %>
        <% end %>
      </td>
      <td><%= book_comment.comment %></td>
    <% if book_comment.user.id == current_user.id %>
      <td><%= link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment.id), class: "btn btn-sm btn-danger", method: :delete, remote: true %></td>
    <% end %>
    </tr>
  <% end %>
</tbody>
